<% provide(:title, "Edit user") %>
<h1>Изменение профиля</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label 'Имя' %>
      <%= f.text_field :fio1 %>

      <%= f.label 'Отчество' %>
      <%= f.text_field :fio2 %>

      <%= f.label 'Фамилия' %>
      <%= f.text_field :fio3 %>

      <%= @user.fio = @user.fio1 + ' ' + @user.fio2 %>

      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <% if current_user.admin? %>

        <%= f.label :cleaning %>
        <%= f.text_field :cleaning %>

        <%= f.label :admin %>
        <%= f.text_field :admin %>

      <% end %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Сохранить изменения", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
  </div>
</div>