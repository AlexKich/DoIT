  <div class="field">
    <%= f.label :memory %><br>
    <%= f.text_field :memory %>
  </div>
  <div class="field">
    <%= f.label :hdd %><br>
    <%= f.text_field :hdd %>
  </div>
  <div class="field">
    <%= f.label :keyboard %><br>
    <%= f.text_field :keyboard %>
  </div>
  <div class="field">
    <%= f.label :mouse %><br>
    <%= f.text_field :mouse %>
  </div>
  <div class="field">
    <%= f.label :speaker %><br>
    <%= f.text_field :speaker %>
  </div>
  <div class="field">
    <%= f.label :spisan %><br>
	<%= f.text_field :spisan, 'class' => 'datepicker' %>

