		$(document).ready(function(){
		$('.datepicker').datepicker({
			language: "ru"
		});

		});
	</script>


  </div>
  <div class="field">
    <%= f.label :spisan_txt %><br>
    <%= f.text_area :spisan_txt %>
  </div>



  <div class="actions">
    <%= f.submit %>
  </div>
    <%= link_to 'Show', @hardware, :class => 'btn' %>
    <%= link_to 'Back', hardwares_path, :class => 'btn' %>
</span>
<% end %>

