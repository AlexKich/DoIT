    <%= f.collection_select(:company_id, Company.order('company_name ASC'), :id, :company_name, include_blank: true) %>

  </div>
  <div class="field">
    <%= f.label :department_id %><br>
    <%= f.collection_select(:department_id, Department.order('department_name ASC'), :id, :department_name, include_blank: true) %>

  </div>

   <div class="field">
     <%= f.label :coworker_id %><br>
     <%= f.collection_select(:coworker_id, Coworker.order('coworker_name ASC'), :id, :coworker_name, include_blank: true) %>

   </div>

  <div class="field">

    <%= f.label :by_doc %><br />
    <%= f.file_field :by_doc %>

  </div>
  <div class="field">

  <%= f.label :Image %><br/>
  <%= f.file_field 'file' %>
  <%= f.submit "Upload" %>
 
  </div>

  <div class="field">
    <%= f.label :by_price %><br>
    <%= f.text_field :by_price %>
  </div>
  <div class="field">
    <%= f.label :model_name %><br>
    <%= f.text_field :model_name %>
  </div>
  <div class="field">
    <%= f.label :notebook %><br>
    <%= f.check_box :notebook %>
  </div>
  <div class="field">
    <%= f.label :cpu %><br>
    <%= f.text_field :cpu %>
  </div>

  </span>
